<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Clinic Image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_clinic_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_clinic_image"
            app:shapeAppearanceOverlay="@style/RoundedCornerImageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Clinic Name -->
        <TextView
            android:id="@+id/tv_clinic_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            android:fontFamily="@font/poppins_bold"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@id/iv_clinic_image"
            app:layout_constraintStart_toEndOf="@id/iv_clinic_image"
            app:layout_constraintEnd_toStartOf="@id/tv_distance"
            tools:text="Phòng khám Đa khoa ABC" />

        <!-- Specialty -->
        <TextView
            android:id="@+id/tv_specialty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:textColor="@color/text_gray"
            android:background="@drawable/bg_specialty_chip"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/tv_clinic_name"
            app:layout_constraintStart_toStartOf="@id/tv_clinic_name"
            app:layout_constraintEnd_toEndOf="@id/tv_clinic_name"
            tools:text="Tim mạch, Da liễu" />

        <!-- Distance -->
        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/primary_blue"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/tv_clinic_name"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="2.5 km"
            tools:visibility="visible" />

        <!-- Address -->
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:textColor="@color/text_gray"
            android:maxLines="2"
            android:ellipsize="end"
            android:drawablePadding="4dp"
            app:drawableStartCompat="@drawable/ic_location"
            app:drawableTint="@color/text_gray"
            app:layout_constraintTop_toBottomOf="@id/tv_specialty"
            app:layout_constraintStart_toStartOf="@id/tv_clinic_name"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="123 Đường ABC, Phường XYZ, Quận 1, TP.HCM" />

        <!-- Rating and Status Row -->
        <LinearLayout
            android:id="@+id/rating_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/tv_address"
            app:layout_constraintStart_toStartOf="@id/tv_clinic_name"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Rating Bar -->
            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.1"
                android:isIndicator="true"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp"
                style="@style/Widget.AppCompat.RatingBar.Small"
                tools:rating="4.5" />

            <!-- Rating Text -->
            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_black"
                tools:text="4.5" />

            <!-- Review Count -->
            <TextView
                android:id="@+id/tv_review_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textSize="10sp"
                android:textColor="@color/text_gray"
                tools:text="(120 reviews)" />

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Open Status -->
            <TextView
                android:id="@+id/tv_open_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/success_green"
                tools:text="Đang mở cửa" />

        </LinearLayout>

        <!-- Book Appointment Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_book_appointment"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:text="Đặt lịch khám"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:cornerRadius="18dp"
            app:backgroundTint="@color/primary_blue"
            style="@style/Widget.MaterialComponents.Button"
            app:layout_constraintTop_toBottomOf="@id/rating_layout"
            app:layout_constraintStart_toStartOf="@id/tv_clinic_name"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>