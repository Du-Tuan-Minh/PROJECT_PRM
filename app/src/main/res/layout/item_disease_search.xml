<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Disease Icon -->
        <ImageView
            android:id="@+id/iv_disease_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_medical_cross"
            android:background="@drawable/bg_circle"
            android:backgroundTint="@color/primary_blue"
            android:padding="12dp"
            app:tint="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Disease Name -->
        <TextView
            android:id="@+id/tv_disease_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            android:fontFamily="@font/poppins_bold"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@id/iv_disease_icon"
            app:layout_constraintStart_toEndOf="@id/iv_disease_icon"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Viêm phổi cấp tính" />

        <!-- Disease Symptoms -->
        <TextView
            android:id="@+id/tv_disease_symptoms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:textColor="@color/text_gray"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            app:layout_constraintTop_toBottomOf="@id/tv_disease_name"
            app:layout_constraintStart_toStartOf="@id/tv_disease_name"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Triệu chứng: Sốt cao, ho có đờm, khó thở, đau ngực..." />

        <!-- Disease Causes -->
        <TextView
            android:id="@+id/tv_disease_causes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:textColor="@color/text_gray"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/tv_disease_symptoms"
            app:layout_constraintStart_toStartOf="@id/tv_disease_name"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Nguyên nhân: Vi khuẩn, virus, nấm..." />

        <!-- Arrow Icon -->
        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_arrow_forward"
            app:tint="@color/text_gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>