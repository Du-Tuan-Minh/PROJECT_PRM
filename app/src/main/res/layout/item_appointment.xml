<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Doctor Avatar -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_doctor_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/default_doctor_avatar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Doctor Name -->
        <TextView
            android:id="@+id/tv_doctor_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dr. Drake Boeson"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@id/iv_doctor_avatar"
            app:layout_constraintStart_toEndOf="@id/iv_doctor_avatar"
            app:layout_constraintEnd_toStartOf="@id/communication_icons_layout" />

        <!-- Specialty -->
        <TextView
            android:id="@+id/tv_specialty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dermatologist"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_doctor_name"
            app:layout_constraintStart_toEndOf="@id/iv_doctor_avatar"
            app:layout_constraintEnd_toStartOf="@id/communication_icons_layout" />

        <!-- Communication Icons Layout -->
        <LinearLayout
            android:id="@+id/communication_icons_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/tv_doctor_name"
            app:layout_constraintEnd_toStartOf="@id/btn_action_primary">

            <!-- Video Call Icon -->
            <ImageView
                android:id="@+id/iv_video_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_video_call"
                android:background="@drawable/bg_icon_circle"
                android:padding="6dp"
                android:visibility="gone"
                app:tint="@color/primary_blue"
                android:layout_marginEnd="8dp" />

            <!-- Message Icon -->
            <ImageView
                android:id="@+id/iv_message_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_message"
                android:background="@drawable/bg_icon_circle"
                android:padding="6dp"
                android:visibility="gone"
                app:tint="@color/primary_blue"
                android:layout_marginEnd="8dp" />

            <!-- Contact/Call Icon -->
            <ImageView
                android:id="@+id/iv_contact_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_phone"
                android:background="@drawable/bg_icon_circle"
                android:padding="6dp"
                android:visibility="gone"
                app:tint="@color/primary_blue" />

        </LinearLayout>

        <!-- Primary Action Button (Top Right) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_action_primary"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Contact"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="gone"
            android:minWidth="0dp"
            android:paddingHorizontal="12dp"
            app:cornerRadius="16dp"
            app:backgroundTint="@color/primary_blue"
            style="@style/Widget.MaterialComponents.Button"
            app:layout_constraintTop_toTopOf="@id/tv_doctor_name"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Date Time -->
        <TextView
            android:id="@+id/tv_appointment_date_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Today | December 22, 2022"
            android:textSize="12sp"
            android:textColor="@color/text_gray"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_specialty"
            app:layout_constraintStart_toEndOf="@id/iv_doctor_avatar"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Status Chip -->
        <TextView
            android:id="@+id/tv_status_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upcoming"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/status_upcoming_text"
            android:background="@drawable/bg_status_chip"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_appointment_date_time"
            app:layout_constraintStart_toStartOf="@id/tv_appointment_date_time" />

        <!-- Action Buttons Container -->
        <LinearLayout
            android:id="@+id/action_buttons_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_status_chip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Secondary Action Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_action_secondary"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Cancel Appointment"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:textColor="@color/primary_blue"
                android:layout_marginEnd="8dp"
                android:minWidth="0dp"
                android:paddingHorizontal="16dp"
                app:cornerRadius="20dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/primary_blue"
                app:backgroundTint="@color/white"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <!-- Main Action Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_action_main"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Reschedule"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:minWidth="0dp"
                android:paddingHorizontal="16dp"
                app:cornerRadius="20dp"
                app:backgroundTint="@color/primary_blue"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>