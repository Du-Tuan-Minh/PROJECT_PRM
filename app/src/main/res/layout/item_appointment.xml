<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Doctor Avatar -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_doctor_avatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_doctor_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person"
                android:background="#E5E7EB" />

        </androidx.cardview.widget.CardView>

        <!-- Doctor Information -->
        <LinearLayout
            android:id="@+id/ll_doctor_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/cv_doctor_avatar"
            app:layout_constraintEnd_toStartOf="@id/iv_action"
            app:layout_constraintTop_toTopOf="@id/cv_doctor_avatar">

            <!-- Doctor Name -->
            <TextView
                android:id="@+id/tv_doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Drake Boeson"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                tools:text="Dr. Drake Boeson" />

            <!-- Appointment Type and Status Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Appointment Type -->
                <TextView
                    android:id="@+id/tv_appointment_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Messaging"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    tools:text="Messaging" />

                <!-- Status Badge -->
                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Upcoming"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#2563EB"
                    android:background="@drawable/status_upcoming_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    tools:text="Upcoming" />

            </LinearLayout>

            <!-- Date and Time -->
            <TextView
                android:id="@+id/tv_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Today | 16:00 PM"
                android:textSize="14sp"
                android:textColor="#6B7280"
                tools:text="Today | 16:00 PM" />

        </LinearLayout>

        <!-- Action Icon (Phone/Video/Message) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/iv_action"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:background="@drawable/action_icon_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cv_doctor_avatar">

            <ImageView
                android:id="@+id/iv_action_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_message"
                app:tint="#2563EB"
                tools:src="@drawable/ic_message" />

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons (for upcoming appointments) -->
        <LinearLayout
            android:id="@+id/ll_action_buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/cv_doctor_avatar"
            app:layout_constraintStart_toStartOf="@id/cv_doctor_avatar"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Cancel/Book Again Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_cancel_book"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                android:background="@drawable/button_outlined_background"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/tv_cancel_book"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Cancel Appointment"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#2563EB"
                    android:gravity="center"
                    tools:text="Cancel Appointment" />

            </androidx.cardview.widget.CardView>

            <!-- Reschedule/Review Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_reschedule_review"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                android:background="@drawable/button_filled_background"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/tv_reschedule_review"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Reschedule"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    tools:text="Reschedule" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Action Buttons for Cancelled Appointments (hidden by default) -->
        <LinearLayout
            android:id="@+id/ll_cancelled_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/cv_doctor_avatar"
            app:layout_constraintStart_toStartOf="@id/cv_doctor_avatar"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Cancelled appointment has no action buttons, just the grayed out icon -->

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>