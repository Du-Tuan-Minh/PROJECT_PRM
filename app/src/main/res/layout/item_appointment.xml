<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Doctor Avatar -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_doctor_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_doctor_avatar"
            app:shapeAppearanceOverlay="@style/CircleImageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Doctor Name -->
        <TextView
            android:id="@+id/tv_doctor_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            android:fontFamily="@font/poppins_bold"
            app:layout_constraintTop_toTopOf="@id/iv_doctor_avatar"
            app:layout_constraintStart_toEndOf="@id/iv_doctor_avatar"
            app:layout_constraintEnd_toStartOf="@id/btn_action_primary"
            tools:text="Dr. Raul Zirkind" />

        <!-- Specialty -->
        <TextView
            android:id="@+id/tv_specialty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:textColor="@color/text_gray"
            android:background="@drawable/bg_specialty_chip"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_doctor_name"
            app:layout_constraintStart_toStartOf="@id/tv_doctor_name"
            tools:text="Voice Call" />

        <!-- Status Chip -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_status_chip"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            app:layout_constraintTop_toTopOf="@id/tv_specialty"
            app:layout_constraintStart_toEndOf="@id/tv_specialty"
            app:layout_constraintBottom_toBottomOf="@id/tv_specialty"
            tools:text="Cancelled" />

        <!-- Appointment Date & Time -->
        <TextView
            android:id="@+id/tv_appointment_datetime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:textColor="@color/text_gray"
            app:layout_constraintTop_toBottomOf="@id/tv_specialty"
            app:layout_constraintStart_toStartOf="@id/tv_doctor_name"
            app:layout_constraintEnd_toEndOf="@id/tv_doctor_name"
            tools:text="Dec 12, 2022 | 8:00 PM" />

        <!-- Primary Action Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_action_primary"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:minWidth="0dp"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:paddingHorizontal="12dp"
            app:cornerRadius="16dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Contact" />

        <!-- Action Buttons Container -->
        <LinearLayout
            android:id="@+id/layout_action_buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="end"
            app:layout_constraintTop_toBottomOf="@id/tv_appointment_datetime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Secondary Action Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_action_secondary"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:paddingHorizontal="16dp"
                app:cornerRadius="18dp"
                app:strokeColor="@color/primary_blue"
                app:strokeWidth="1dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                tools:text="Book Again" />

            <!-- Primary Action Button (Main) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_action_main"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:paddingHorizontal="16dp"
                app:cornerRadius="18dp"
                app:backgroundTint="@color/primary_blue"
                style="@style/Widget.MaterialComponents.Button"
                tools:text="Reschedule" />

        </LinearLayout>

        <!-- Contact Icon (for specific states) -->
        <ImageView
            android:id="@+id/iv_contact_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_phone"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:visibility="gone"
            app:tint="@color/primary_blue"
            app:layout_constraintTop_toTopOf="@id/tv_doctor_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_appointment_datetime" />

        <!-- Video Call Icon -->
        <ImageView
            android:id="@+id/iv_video_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_video_call"
            android:visibility="gone"
            app:tint="@color/primary_blue"
            app:layout_constraintTop_toTopOf="@id/tv_specialty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_specialty" />

        <!-- Message Icon -->
        <ImageView
            android:id="@+id/iv_message_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_message"
            android:visibility="gone"
            app:tint="@color/primary_blue"
            app:layout_constraintTop_toTopOf="@id/tv_appointment_datetime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_appointment_datetime" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>