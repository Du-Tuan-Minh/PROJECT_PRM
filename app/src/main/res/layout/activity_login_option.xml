<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingTop="10dp"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <!-- Back arrow -->

        <!-- Logo -->


        <ImageView
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_login_option"
            android:contentDescription="Logo"/>

        <!-- Title -->

        <!-- Email Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Let's you in"
            android:textColor="@color/text_black"
            android:textSize="28sp"
            android:textStyle="bold" />



    <LinearLayout
        android:id="@+id/gotoFacebookLogin"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_button_black_border"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:gravity="center">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_facebook_dat"
            android:gravity="center_horizontal"
            android:layout_marginEnd="12dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue with Facebook"
            android:textSize="16sp"
            android:textColor="@color/text_black"
            android:fontFamily="@font/poppins_bold"/>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/gotoGoogleLogin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_button_black_border"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_google"
                android:gravity="center_horizontal"
                android:layout_marginEnd="12dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue with Google"
                android:textSize="16sp"
                android:textColor="@color/text_black"
                android:fontFamily="@font/poppins_bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:layout_marginVertical="32dp"
            android:gravity="center_vertical">

            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_weight="1"
                android:background="@color/text_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"
                android:textColor="@color/text_gray"
                android:layout_marginHorizontal="16dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_weight="1"
                android:background="@color/text_gray" />
        </LinearLayout>


        <!-- Sign Up Button -->
        <Button
            android:id="@+id/goToSignInButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Sign in with password"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary_blue"
            android:fontFamily="@font/poppins_bold"
            android:elevation="4dp" />

        <!-- Sign In Redirect -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:weightSum="3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins_regular"
                android:text="Don't have an account? "
                android:textColor="@color/text_gray" />

            <TextView
                android:id="@+id/signUpText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:layout_marginStart="5dp"
                android:textColor="@color/primary_blue"
                android:fontFamily="@font/poppins_bold"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>>
    </LinearLayout>
</ScrollView>
