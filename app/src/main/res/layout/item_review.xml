<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvPatientName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nguyễn Thị B"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_black" />

            <TextView
                android:id="@+id/tvReviewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15/12/2024"
                android:textSize="12sp"
                android:textColor="@color/text_gray" />

        </LinearLayout>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="4.5"
            android:stepSize="0.5"
            android:isIndicator="true"
            android:progressTint="@color/rating_color"
            android:layout_marginBottom="8dp"
            style="?android:attr/ratingBarStyleSmall" />

        <TextView
            android:id="@+id/tvReviewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bác sĩ rất tận tâm và chuyên nghiệp. Tôi cảm thấy rất hài lòng với dịch vụ."
            android:textSize="13sp"
            android:textColor="@color/text_gray"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView> 