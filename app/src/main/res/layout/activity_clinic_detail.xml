<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Clinic Image Header -->
        <ImageView
            android:id="@+id/iv_clinic_image"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_clinic_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Back Button -->
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_back"
            android:background="@drawable/bg_circle"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            app:tint="@color/text_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Clinic Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_clinic_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="-50dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/iv_clinic_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <!-- Clinic Name -->
                <TextView
                    android:id="@+id/tv_clinic_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_black"
                    android:fontFamily="@font/poppins_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Phòng khám Đa khoa ABC" />

                <!-- Specialty -->
                <TextView
                    android:id="@+id/tv_specialty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    app:layout_constraintTop_toBottomOf="@id/tv_clinic_name"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="Tim mạch • Da liễu • Khám tổng quát" />

                <!-- Rating Section -->
                <LinearLayout
                    android:id="@+id/rating_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toBottomOf="@id/tv_specialty"
                    app:layout_constraintStart_toStartOf="parent">

                    <RatingBar
                        android:id="@+id/rating_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.1"
                        android:isIndicator="true"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:transformPivotX="0dp"
                        android:transformPivotY="0dp"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        tools:rating="4.5" />

                    <TextView
                        android:id="@+id/tv_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_black"
                        tools:text="4.5" />

                    <TextView
                        android:id="@+id/tv_review_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textSize="14sp"
                        android:textColor="@color/text_gray"
                        tools:text="(120 đánh giá)" />

                </LinearLayout>

                <!-- Open Status -->
                <TextView
                    android:id="@+id/tv_open_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/success_green"
                    app:layout_constraintTop_toBottomOf="@id/rating_section"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="• Đang mở cửa" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Contact Information -->
        <LinearLayout
            android:id="@+id/contact_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:background="@drawable/bg_input"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/card_clinic_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin liên hệ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_black"
                android:layout_marginBottom="12dp" />

            <!-- Address -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_location"
                    app:tint="@color/text_gray"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    tools:text="123 Đường ABC, Phường XYZ, Quận 1, TP.HCM" />

            </LinearLayout>

            <!-- Phone -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_phone"
                    app:tint="@color/text_gray"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    tools:text="(028) 1234 5678" />

            </LinearLayout>

            <!-- Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_email"
                    app:tint="@color/text_gray"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    tools:text="contact@clinic.com" />

            </LinearLayout>

        </LinearLayout>

        <!-- Working Hours -->
        <LinearLayout
            android:id="@+id/working_hours_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:background="@drawable/bg_input"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/contact_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giờ làm việc"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_working_hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_black"
                android:lineSpacingExtra="2dp"
                tools:text="Thứ 2 - Thứ 6: 8:00 - 17:00\nThứ 7: 8:00 - 12:00\nChủ nhật: Nghỉ" />

        </LinearLayout>

        <!-- Description -->
        <LinearLayout
            android:id="@+id/description_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:background="@drawable/bg_input"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/working_hours_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới thiệu"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_black"
                android:lineSpacingExtra="2dp"
                tools:text="Phòng khám chuyên nghiệp với đội ngũ bác sĩ giàu kinh nghiệm..." />

        </LinearLayout>

        <!-- Services RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_services"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/description_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/action_buttons_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/description_section"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Book Appointment Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_book_appointment"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Đặt lịch khám"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginBottom="12dp"
                app:cornerRadius="28dp"
                app:backgroundTint="@color/primary_blue"
                style="@style/Widget.MaterialComponents.Button" />

            <!-- Secondary Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Call Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_call_clinic"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="Gọi điện"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_phone"
                    app:iconTint="@color/primary_blue"
                    app:cornerRadius="24dp"
                    app:strokeColor="@color/primary_blue"
                    app:strokeWidth="1dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                <!-- Directions Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_get_directions"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="Chỉ đường"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_location"
                    app:iconTint="@color/primary_blue"
                    app:cornerRadius="24dp"
                    app:strokeColor="@color/primary_blue"
                    app:strokeWidth="1dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            </LinearLayout>

        </LinearLayout>

        <!-- Progress Bar -->
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:indicatorColor="@color/primary_blue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>