<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@color/white"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:tint="@color/text_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reschedule Appointment"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            android:fontFamily="@font/poppins_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Content ScrollView -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintBottom_toTopOf="@id/button_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Step 1: Reason Selection -->
            <LinearLayout
                android:id="@+id/step_1_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reason for Schedule Change"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_black"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginBottom="16dp" />

                <RadioGroup
                    android:id="@+id/radio_group_reasons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radio_schedule_clash"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="I want to change to another doctor"
                        android:textColor="@color/text_black"
                        android:layout_marginBottom="8dp" />

                    <RadioButton
                        android:id="@+id/radio_change_package"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="I want to change package"
                        android:textColor="@color/text_black"
                        android:layout_marginBottom="8dp" />

                    <RadioButton
                        android:id="@+id/radio_no_consultation"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="I don't want to consult"
                        android:textColor="@color/text_black"
                        android:layout_marginBottom="8dp" />

                    <RadioButton
                        android:id="@+id/radio_recovered"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="I have recovered from the disease"
                        android:textColor="@color/text_black"
                        android:layout_marginBottom="8dp" />

                    <RadioButton
                        android:id="@+id/radio_found_medicine"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="I have found a suitable medicine"
                        android:textColor="@color/text_black"
                        android:layout_marginBottom="8dp" />

                    <RadioButton
                        android:id="@+id/radio_schedule_conflict"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="I have a schedule clash"
                        android:textColor="@color/text_black"
                        android:layout_marginBottom="8dp" />

                    <RadioButton
                        android:id="@+id/radio_want_cancel"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="I just want to cancel"
                        android:textColor="@color/text_black"
                        android:layout_marginBottom="8dp" />

                    <RadioButton
                        android:id="@+id/radio_dont_want_tell"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="I don't want to tell"
                        android:textColor="@color/text_black"
                        android:layout_marginBottom="8dp" />

                    <RadioButton
                        android:id="@+id/radio_others"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Others"
                        android:textColor="@color/text_black" />

                </RadioGroup>

            </LinearLayout>

            <!-- Step 2: Date Selection -->
            <LinearLayout
                android:id="@+id/step_2_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Date"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_black"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginBottom="16dp" />

                <CalendarView
                    android:id="@+id/calendar_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

            <!-- Step 3: Time Selection -->
            <LinearLayout
                android:id="@+id/step_3_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Hour"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_black"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:id="@+id/time_slot_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <!-- Bottom Button Container -->
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Next"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:cornerRadius="28dp"
            app:backgroundTint="@color/primary_blue"
            style="@style/Widget.MaterialComponents.Button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_submit"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Submit"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="gone"
            app:cornerRadius="28dp"
            app:backgroundTint="@color/primary_blue"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>