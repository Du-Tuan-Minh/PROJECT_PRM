<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_light">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🩺 Healthcare App Demo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Real Database Integration with Dynamic Data"
            android:textSize="16sp"
            android:textColor="@color/text_gray"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- User Info Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_user_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="👤 Current User\nName: Demo User\nEmail: demo@healthcare.com\nUser ID: 1"
                android:textSize="14sp"
                android:textColor="@color/text_black"
                android:lineSpacingExtra="4dp"
                android:padding="16dp" />

        </androidx.cardview.widget.CardView>

        <!-- Statistics Row 1 -->
        <LinearLayout
            android:id="@+id/stats_row_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/card_user_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Appointment Stats Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <TextView
                    android:id="@+id/tv_data_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📊 Appointment Statistics\nLoading..."
                    android:textSize="12sp"
                    android:textColor="@color/text_black"
                    android:lineSpacingExtra="2dp"
                    android:padding="16dp" />

            </androidx.cardview.widget.CardView>

            <!-- Doctor Stats Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <TextView
                    android:id="@+id/tv_doctor_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="👨‍⚕️ Doctor Database\nLoading..."
                    android:textSize="12sp"
                    android:textColor="@color/text_black"
                    android:lineSpacingExtra="2dp"
                    android:padding="16dp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Statistics Row 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_clinic_stats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/stats_row_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_clinic_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🏥 Clinic Database\nLoading..."
                android:textSize="14sp"
                android:textColor="@color/text_black"
                android:lineSpacingExtra="4dp"
                android:padding="16dp" />

        </androidx.cardview.widget.CardView>

        <!-- Features Info -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_features"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/card_clinic_stats"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✨ Real Data Features"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_black"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• 8 Real Doctors with Specialties &amp; Ratings\n• 8 Medical Clinics with Services &amp; Reviews\n• Dynamic Appointment Fees based on Doctor\n• Smart Avatar System by Specialty\n• Real Patient Data Integration\n• Authorization &amp; Security Checks\n• Live Database Statistics"
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/buttons_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/card_features"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Main Action Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_appointments"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="📅 View My Appointments"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginBottom="16dp"
                app:cornerRadius="28dp"
                app:backgroundTint="@color/primary_blue"
                app:icon="@drawable/ic_calendar_filled"
                app:iconTint="@color/white"
                style="@style/Widget.MaterialComponents.Button" />

            <!-- Secondary Buttons Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_refresh_data"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="🔄 Refresh Data"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:textColor="@color/primary_blue"
                    android:layout_marginEnd="6dp"
                    app:cornerRadius="24dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/primary_blue"
                    app:backgroundTint="@color/white"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_generate_more"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="➕ Generate More"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:textColor="@color/status_completed_text"
                    android:layout_marginStart="6dp"
                    app:cornerRadius="24dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/status_completed_text"
                    app:backgroundTint="@color/white"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            </LinearLayout>

            <!-- Secondary Buttons Row 2 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_clear_data"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="🗑️ Clear All Data"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textColor="@color/status_cancelled_text"
                app:cornerRadius="24dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/status_cancelled_text"
                app:backgroundTint="@color/white"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Healthcare Demo • Real Database Integration • Live Data Updates"
            android:textSize="12sp"
            android:textColor="@color/text_gray"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/buttons_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>