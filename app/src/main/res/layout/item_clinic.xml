<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivClinicImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_general"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_circle" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvClinicName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phòng khám Đa khoa"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvClinicAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="123 Đường ABC, Quận XYZ, Hà Nội"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvClinicRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/ic_star"
                    android:drawablePadding="4dp" />

                <TextView
                    android:id="@+id/tvClinicReviewCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(156 đánh giá)"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvClinicSpecialties"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tim mạch, Nội tổng quát"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvClinicWorkingHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7:00 - 20:00"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <ImageView
                android:id="@+id/ivCall"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_call"
                android:background="@drawable/bg_circle_blue"
                android:padding="6dp"
                android:layout_marginBottom="8dp" />

            <ImageView
                android:id="@+id/ivDirection"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_directions"
                android:background="@drawable/bg_circle_green"
                android:padding="6dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView> 