<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_light">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_layout"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:background="@color/white"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                app:tint="@color/text_black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Appointment"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_black"
                android:fontFamily="@font/poppins_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- More Button -->
            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_more_vert"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                app:tint="@color/text_black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Doctor Information Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_doctor_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/header_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Doctor Avatar -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_doctor_avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/default_doctor_avatar"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Doctor Name -->
                <TextView
                    android:id="@+id/tv_doctor_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Dr. Drake Boeson"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_black"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginStart="12dp"
                    app:layout_constraintTop_toTopOf="@id/iv_doctor_avatar"
                    app:layout_constraintStart_toEndOf="@id/iv_doctor_avatar"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Doctor Specialty -->
                <TextView
                    android:id="@+id/tv_specialty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Dermatologist"
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_doctor_name"
                    app:layout_constraintStart_toEndOf="@id/iv_doctor_avatar"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Experience -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="5+ years of experience"
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="2dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_specialty"
                    app:layout_constraintStart_toEndOf="@id/iv_doctor_avatar"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!-- Scheduled Appointment Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_schedule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/card_doctor_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/tv_scheduled_appointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scheduled Appointment"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_black"
                    android:fontFamily="@font/poppins_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Date Time -->
                <TextView
                    android:id="@+id/tv_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today | December 22, 2022"
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_scheduled_appointment"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!-- Patient Information Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_patient_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/card_schedule"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/tv_patient_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patient Information"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_black"
                    android:fontFamily="@font/poppins_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Full Name -->
                <TextView
                    android:id="@+id/label_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_patient_info_title"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tv_patient_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anderson Ashley"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/label_full_name"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Gender -->
                <TextView
                    android:id="@+id/label_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_patient_name"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tv_patient_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/label_gender"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Age -->
                <TextView
                    android:id="@+id/label_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_patient_info_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tv_patient_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/label_age"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Phone -->
                <TextView
                    android:id="@+id/label_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_patient_info_title"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tv_patient_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+(406) 555-0120"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/label_phone"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Problem -->
                <TextView
                    android:id="@+id/label_problem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Problem"
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_patient_gender"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tv_symptoms"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet consectetur adipiscing elit..."
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/label_problem"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!-- Your Package Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_package"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="100dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/card_patient_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/tv_package_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Package"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_black"
                    android:fontFamily="@font/poppins_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Package Item -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_package_item"
                    android:padding="12dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_package_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <!-- Package Icon -->
                    <ImageView
                        android:id="@+id/iv_package_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_message"
                        app:tint="@color/primary_blue"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <!-- Package Name -->
                    <TextView
                        android:id="@+id/tv_package_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Messaging"
                        android:textSize="14sp"
                        android:textColor="@color/text_black"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"
                        app:layout_constraintTop_toTopOf="@id/iv_package_icon"
                        app:layout_constraintStart_toEndOf="@id/iv_package_icon"
                        app:layout_constraintEnd_toStartOf="@id/tv_package_price" />

                    <!-- Package Price -->
                    <TextView
                        android:id="@+id/tv_package_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$25"
                        android:textSize="14sp"
                        android:textColor="@color/text_black"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="@id/iv_package_icon"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!-- Bottom Action Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_primary_action"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Message (Start at 10:00 PM)"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp"
            app:cornerRadius="28dp"
            app:backgroundTint="@color/primary_blue"
            style="@style/Widget.MaterialComponents.Button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>