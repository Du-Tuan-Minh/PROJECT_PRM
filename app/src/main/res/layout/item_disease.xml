<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Disease name and english name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvDiseaseName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tăng huyết áp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_black" />

                <TextView
                    android:id="@+id/tvSeverity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trung bình"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/severity_background"
                    android:padding="4dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvEnglishName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hypertension"
                android:textSize="12sp"
                android:textColor="@color/text_gray"
                android:textStyle="italic"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tim mạch"
                android:textSize="12sp"
                android:textColor="@color/primary_blue"
                android:background="@drawable/category_background"
                android:padding="4dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tình trạng huyết áp cao có thể gây tổn thương tim, não và các cơ quan khác..."
                android:textSize="14sp"
                android:textColor="@color/text_black"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivBookmark"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_bookmark_outline"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:layout_marginStart="8dp" />

        <ImageView
            android:id="@+id/ivSeverityIcon"
            android:layout_width="8dp"
            android:layout_height="40dp"
            android:background="@color/primary_blue"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView> 