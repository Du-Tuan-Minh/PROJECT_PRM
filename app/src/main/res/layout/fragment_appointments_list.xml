<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- Progress Bar -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:indicatorColor="@color/primary_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Appointments RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_appointment" />

    <!-- Empty State View -->
    <LinearLayout
        android:id="@+id/empty_state_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Empty State Illustration -->
        <ImageView
            android:id="@+id/iv_empty_illustration"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/empty_appointments_illustration"
            android:layout_marginBottom="24dp" />

        <!-- Empty State Title -->
        <TextView
            android:id="@+id/tv_empty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You don't have an appointment yet"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Empty State Description -->
        <TextView
            android:id="@+id/tv_empty_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You don't have a doctor's appointment scheduled at the moment"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:paddingHorizontal="32dp" />

        <!-- Book Appointment Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_book_appointment"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Find a Doctor"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:paddingHorizontal="32dp"
            app:cornerRadius="24dp"
            app:backgroundTint="@color/primary_blue"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>