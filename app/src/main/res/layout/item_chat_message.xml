<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Tin nhắn người dùng (phải) -->
    <TextView
        android:id="@+id/tv_user_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="8dp"
        android:padding="12dp"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:background="@drawable/user_message_background"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Người dùng gửi gì đó..." />

    <!-- Tin nhắn từ bot (trái) -->
    <TextView
        android:id="@+id/tv_bot_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="48dp"
        android:padding="12dp"
        android:textSize="15sp"
        android:textColor="#212121"
        android:background="@drawable/bot_message_background"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Chào bạn! Tôi là AI hỗ trợ sức khỏe." />
</androidx.constraintlayout.widget.ConstraintLayout>
