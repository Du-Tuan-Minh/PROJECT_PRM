<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_rounded"
    android:padding="32dp">

    <!-- Icon Container -->
    <LinearLayout
        android:id="@+id/iconContainer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_success_dialog"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Success Icon -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_check"
            app:tint="@color/white" />

    </LinearLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Success!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/blue_dialog"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/iconContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Message -->
    <TextView
        android:id="@+id/messageText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Your action has been completed successfully!"
        android:textSize="14sp"
        android:textColor="@color/text_gray"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Primary Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/primaryButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="OK"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginTop="32dp"
        app:cornerRadius="24dp"
        app:backgroundTint="@color/primary_blue"
        style="@style/Widget.MaterialComponents.Button"
        app:layout_constraintTop_toBottomOf="@id/messageText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Cancel Button (Hidden by default) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancelButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Cancel"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="@color/text_gray"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        app:cornerRadius="24dp"
        app:backgroundTint="@color/white"
        app:strokeWidth="1dp"
        app:strokeColor="@color/stroke_color"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:layout_constraintTop_toBottomOf="@id/primaryButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>