<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white">

    <!-- Header -->
    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🩺 Ứng dụng Sức khỏe"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button: Thư viện bệnh -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_disease_library"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="📚 Thư viện bệnh"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:layout_marginTop="32dp"
        app:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button: Tìm phòng khám -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_find_clinic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="🏥 Tìm phòng khám"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_disease_library"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button: Đặt lịch khám -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_book_appointment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="📅 Đặt lịch khám"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_find_clinic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button: Xem lịch hẹn -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_view_appointments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="📋 Xem lịch hẹn"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_book_appointment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button: Chatbot -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_chatbot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="🤖 Chatbot tư vấn"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_view_appointments"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button: Đăng xuất -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="🚪 Đăng xuất"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:layout_marginTop="32dp"
        app:backgroundTint="@color/error_red"
        android:textColor="@android:color/white"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_chatbot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>