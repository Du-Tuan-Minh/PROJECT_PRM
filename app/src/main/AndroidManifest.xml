<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ========== PERMISSIONS FOR OSMDROID ========== -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Location permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- OSMDroid permissions -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- Optional: Call permission -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Project_PRM"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- ========== ✅ KHÔNG CẦN GOOGLE MAPS API KEY ========== -->
        <!-- OSMDroid hoàn toàn miễn phí, không cần API key -->

        <!-- ========== SPLASH & ONBOARDING ========== -->

        <activity
            android:name=".DashBoardScreen.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Project_PRM.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DashBoardScreen.Onboarding1Activity"
            android:exported="false"
            android:theme="@style/Theme.Project_PRM.NoActionBar" />
        <activity
            android:name=".DashBoardScreen.Onboarding2Activity"
            android:exported="false"
            android:theme="@style/Theme.Project_PRM.NoActionBar" />
        <activity
            android:name=".DashBoardScreen.Onboarding3Activity"
            android:exported="false"
            android:theme="@style/Theme.Project_PRM.NoActionBar" />

        <!-- ========== AUTHENTICATION ========== -->

        <activity
            android:name=".ui.auth.LoginOptionActivity"
            android:exported="false"
            android:theme="@style/Theme.Project_PRM" />
        <activity
            android:name=".ui.auth.SignUpActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.Project_PRM" />
        <activity
            android:name=".ui.auth.SignInActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.Project_PRM" />
        <activity
            android:name=".ui.auth.ForgotPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.Project_PRM" />
        <activity
            android:name=".ui.auth.ChangePasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.Project_PRM" />

        <!-- ========== MAIN ACTIVITIES ========== -->

        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.Project_PRM" />

        <activity
            android:name=".MainScreen.DiseaseLibraryActivity"
            android:exported="false"
            android:theme="@style/Theme.Project_PRM" />
        <activity
            android:name=".MainScreen.FindClinicActivity"
            android:exported="false"
            android:theme="@style/Theme.Project_PRM" />
        <activity
            android:name=".MainScreen.ChatbotActivity"
            android:exported="false"
            android:theme="@style/Theme.Project_PRM" />

        <!-- ========== ✅ UPDATED: TUNG'S FEATURES WITH OSMDROID ========== -->

        <!-- CHỨC NĂNG 6: Search phòng khám với OSMDroid Maps (FREE) -->
        <activity
            android:name=".ui.SearchScreen.ClinicSearchActivity"
            android:exported="false"
            android:theme="@style/Theme.Project_PRM"
            android:screenOrientation="portrait"
            android:hardwareAccelerated="true" />

        <activity
            android:name=".ui.SearchScreen.ClinicDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.Project_PRM"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.SearchScreen.DiseaseSearchActivity"
            android:exported="false"
            android:theme="@style/Theme.Project_PRM"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.SearchScreen.DiseaseDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.Project_PRM"
            android:screenOrientation="portrait" />

        <!-- CHỨC NĂNG 8: Đặt lịch khám với form thông tin -->
        <activity
            android:name=".ui.BookingScreen.AppointmentBookingActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.Project_PRM"
            android:screenOrientation="portrait" />

        <!-- CHỨC NĂNG 9: Lịch sử đặt lịch khám -->
        <activity
            android:name=".ui.AppointmentScreen.MyAppointmentActivity"
            android:exported="false"
            android:theme="@style/Theme.Project_PRM"
            android:screenOrientation="portrait" />

        <!-- CHỨC NĂNG 10: Chi tiết cuộc hẹn -->
        <activity
            android:name=".ui.AppointmentScreen.AppointmentDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.Project_PRM"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.AppointmentScreen.RescheduleActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.Project_PRM"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.AppointmentScreen.CancelAppointmentActivity"
            android:exported="false"
            android:theme="@style/Theme.Project_PRM"
            android:screenOrientation="portrait" />

        <!-- CHỨC NĂNG 4: Đánh giá bác sĩ -->
        <activity
            android:name=".ui.AppointmentScreen.ReviewActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.Project_PRM"
            android:screenOrientation="portrait" />

    </application>

</manifest>
